@model IEnumerable<InfrustructureMVC.Models.Classroom>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="table table-striped table-condensed" id="classTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CRoomNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CRoomType)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CRoomNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CRoomType)
                </td>
              
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Classroom", new { id=@item.CId})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Classroom", new { id=@item.CId})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
