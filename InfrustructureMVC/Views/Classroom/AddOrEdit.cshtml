@model InfrustructureMVC.Models.Classroom

@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;

   
}



@using (Html.BeginForm("AddOrEdit", "Classroom", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "Classroom", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CId)
            

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.CRoomNo, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CRoomNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CRoomNo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CRoomType, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select name="CRoomType" id="CRoomType">
                            <option value="Classroom">Classroom</option>
                            <option value="Labroom">Labroom</option>
                            
                        </select>
                        @Html.ValidationMessageFor(model => model.CRoomType)
                    </div>
                </div>

               
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                        @if (Model.CId != 0)
                        {
                            <a class="btn btn-success" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","Classroom",new{id=0})',false)"><i class="fa fa-plus"></i> Add New</a>
                        }
                    </div>
                </div>
            </div>
           

        </div>
    </div>
}

