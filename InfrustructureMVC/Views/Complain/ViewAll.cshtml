@model IEnumerable<InfrustructureMVC.Models.Complain>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="table table-striped table-condensed" id="complainTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComplainDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComplainStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classroom.CRoomNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Infrustructure.ITypes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplainDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplainStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classroom.CRoomNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Infrustructure.ITypes)
        </td>
        <td>
            <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Complain", new { id=@item.Id})')"><i class="fa fa-pencil fa-lg"></i></a>
            <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Complain", new { id=@item.Id})')"><i class="fa fa-trash fa-lg"></i></a>

        </td>
    </tr>
}

</table>
